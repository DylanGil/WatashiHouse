<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintLayoutShoppingCart">

        <Button
            android:id="@+id/deleteLocalStorageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vider le panier"
            android:backgroundTint="#1A192B"
            android:layout_marginEnd="135dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewShoppingCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/deleteLocalStorageButton"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/deleteLocalStorageButton"
            tools:itemCount="5"
            tools:layout_editor_absoluteX="205dp"
            tools:listitem="@layout/item_class_delete_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>
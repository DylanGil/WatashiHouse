<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingCart.ValidateShopping"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/bottomValidateShopping"
        android:layout_width="409dp"
        android:layout_height="40dp"
        android:background="#1A192B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/googlePayButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#1A192B"
            android:text="payer avec Google Pay"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/cbButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="196dp"
        android:text="Payer avec cb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>